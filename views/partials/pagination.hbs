{{#if (gt pagination.total_pages 1)}}
  <nav class="pagination">
    {{#if pagination.prev_page}}
      <a
        class="pagination-link pagination-previous"
        href="{{page}}?page={{pagination.prev_page}}{{#if pageSize}}&size={{pageSize}}{{/if}}"
        data-fragment-url="{{fragment}}?page={{pagination.prev_page}}{{#if pageSize}}&size={{pageSize}}{{/if}}"
        data-fragment-element-id="{{fragment_id}}"
      >Previous</a>
      —
    {{/if}}
    <span class="pagination-current">Page {{pagination.current_page}} of {{pagination.total_pages}}</span>
    {{#if pagination.next_page}}
      —
      <a
        class="pagination-link pagination-next"
        href="{{page}}?page={{pagination.next_page}}{{#if pageSize}}&size={{pageSize}}{{/if}}"
        data-fragment-url="{{fragment}}?page={{pagination.next_page}}{{#if pageSize}}&size={{pageSize}}{{/if}}"
        data-fragment-element-id="{{fragment_id}}"
      >Next</a>
    {{/if}}
  </nav>
{{/if}}
