{
  "extends": "@tsconfig/node16/tsconfig.json",
  "compilerOptions": {
    "sourceMap": true,
    "strict": true,
    "allowJs": true,
    "moduleResolution": "node",
    "target": "es6",
    "module": "CommonJS",
    "esModuleInterop": true,
    "outDir": "dist"
  },
  "include": ["**/*"],
  "exclude": [
    "node_modules",
    "./bookmarklets",
    "./dist",
    "./migrations",
    "./public",
    "**/*.spec.ts"
  ]
}
